<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Invoice</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <!-- Modal for New Invoice -->
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">New Invoice</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form action="/invoice/create" method="POST">
            <!-- Customer Details -->
            <div class="mb-3">
              <label for="customerName" class="form-label">Customer name</label>
              <input type="text" class="form-control" id="customerName" name="customerName" placeholder="Enter customer name" required>
            </div>

            <div class="mb-3">
              <label for="customerPhone" class="form-label">Customer Phone</label>
              <input type="tel" class="form-control" id="customerPhone" name="customerPhone" placeholder="Enter phone number" required>
            </div>

            <div class="mb-3">
              <label for="customerAddress" class="form-label">Customer Address</label>
              <input type="text" class="form-control" id="customerAddress" name="customerAddress" placeholder="Enter customer address" required>
            </div>

            <!-- Purchase Details -->
            <h6 class="mb-3">Purchase details</h6>
            <div class="row mb-3">
              <div class="col-4">
                <label class="form-label">Facility</label>
              </div>
              <div class="col-4">
                <label class="form-label">Quantity</label>
              </div>
              <div class="col-4">
                <label class="form-label">Cost</label>
              </div>
            </div>

            <!-- Item 1 -->
            <div class="row mb-3">
              <div class="col-4">
                <input type="text" class="form-control" name="item1" placeholder="Item 1">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="quantity1" placeholder="Quantity">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="cost1" placeholder="Cost">
              </div>
            </div>

            <!-- Item 2 -->
            <div class="row mb-3">
              <div class="col-4">
                <input type="text" class="form-control" name="item2" placeholder="Item 2">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="quantity2" placeholder="Quantity">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="cost2" placeholder="Cost">
              </div>
            </div>

            <!-- Item 3 -->
            <div class="row mb-3">
              <div class="col-4">
                <input type="text" class="form-control" name="item3" placeholder="Item 3">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="quantity3" placeholder="Quantity">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="cost3" placeholder="Cost">
              </div>
            </div>

            <!-- Item 4 -->
            <div class="row mb-3">
              <div class="col-4">
                <input type="text" class="form-control" name="item4" placeholder="Item 4">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="quantity4" placeholder="Quantity">
              </div>
              <div class="col-4">
                <input type="number" class="form-control" name="cost4" placeholder="Cost">
              </div>
            </div>

            <!-- Save and Close Buttons -->
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
